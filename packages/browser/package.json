{
  "name": "@ibm-aspera-sdk/browser",
  "version": "4.0.1",
  "description": "Official IBM Aspera Connect SDK for Browsers",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "esm/index.js",
  "scripts": {
    "build": "run-s build:dist build:esm build:bundle build:docs",
    "build:bundle": "webpack",
    "build:bundle:watch": "webpack --watch",
    "build:dist": "tsc -p tsconfig.json",
    "build:dist:watch": "tsc -p tsconfig.json -w --preserveWatchOutput",
    "build:docs": "jsdoc build/asperaweb-4.js --configure docs/jsdoc.config.js",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:esm:watch": "tsc -p tsconfig.esm.json -w --preserveWatchOutput",
    "build:watch": "run-p build:dist:watch build:esm:watch build:bundle:watch",
    "clean": "rimraf dist build esm",
    "dev": "webpack  --mode=development --progress --colors --watch",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "test:integration": "karma start test/config/karma.integration.conf.js",
    "test:integration:headless": "karma start test/config/karma.integration.conf.js --browsers ChromeCustom"
  },
  "keywords": [],
  "author": "IBM",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "core-js": "^3.0.1",
    "eslint": "^7.25.0",
    "eslint-plugin-jsdoc": "^33.1.0",
    "jsdoc": "^3.6.3",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "puppeteer": "^5.4.1",
    "terser-webpack-plugin": "^1.2.3",
    "ts-loader": "^5.4.4",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1"
  },
  "dependencies": {},
  "jshintConfig": {
    "esversion": 6
  }
}
