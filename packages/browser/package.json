{
  "name": "@ibm-aspera/connect-sdk-js",
  "version": "4.0.2",
  "author": "IBM Aspera",
  "description": "Official IBM Aspera Connect SDK for Browsers",
  "private": true,
  "main": "dist/commonjs/index.js",
  "types": "dist/commonjs/index.d.ts",
  "module": "dist/esm/index.js",
  "scripts": {
    "build": "run-s build:commonjs build:esm build:bundle build:docs",
    "build:bundle": "webpack --mode production",
    "build:commonjs": "tsc -p tsconfig.json",
    "build:docs": "jsdoc dist/commonjs --configure docs/jsdoc.config.js",
    "build:esm": "tsc -p tsconfig.esm.json",
    "clean": "rimraf ./dist",
    "dev": "webpack  --mode development --progress --colors --watch",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "test:integration": "karma start test/config/karma.integration.conf.js",
    "test:integration:headless": "karma start test/config/karma.integration.conf.js --browsers ChromeCustom"
  },
  "repository": {
    "type": "git",
    "url": "git@github.ibm.com:Aspera/connect-sdk.git"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "chai": "^4.2.0",
    "eslint": "^7.25.0",
    "eslint-plugin-jsdoc": "^33.1.0",
    "jsdoc": "^3.6.3",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "puppeteer": "^5.4.1",
    "terser-webpack-plugin": "^1.2.3",
    "ts-loader": "^5.4.4",
    "typescript": "^4.2.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1"
  },
  "dependencies": {
    "es6-promise": "^4.2.8",
    "tslib": "^2.2.0"
  },
  "jshintConfig": {
    "esversion": 6
  }
}
