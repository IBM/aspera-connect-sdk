{
  "version": "4.1.2",
  "description": "Top level project for the IBM Aspera Connect SDK",
  "private": true,
  "scripts": {
    "build": "run-s build:browser build:carbon build:bundle",
    "build:browser": "npm --prefix packages/browser run build",
    "build:bundle": "./scripts/bundle-sdk.sh",
    "build:carbon": "npm --prefix packages/carbon-installer run build",
    "build:zip": "./scripts/zip-sdk.sh",
    "bump": "node ./scripts/bump-versions.js",
    "clean": "rimraf *.zip *ConnectSDK* dist packages/browser/dist",
    "lint": "npm --prefix packages/browser run lint",
    "preinstall": "node ./scripts/preinstall.js",
    "release": "standard-version --no-verify --path packages/ --skip.bump=true",
    "test:browser": "npm --prefix packages/browser run test:integration:headless",
    "test:carbon": "npm --prefix packages/carbon-installer run test -- --watchAll false",
    "test:lint": "npm --prefix packages/browser run lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "glob": "^7.1.6",
    "husky": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "replace-in-file": "^4.2.0",
    "rimraf": "^2.6.3",
    "standard-version": "^9.1.0"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "run-s lint"
    }
  }
}
